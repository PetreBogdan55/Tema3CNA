<Window x:Class="ChatClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClientWpf"
        xmlns:views="clr-namespace:ChatClientWpf.Views"
        xmlns:viewsModels="clr-namespace:ChatClientWpf.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" d:DesignHeight="500" d:DesignWidth="900">
    <Window.Resources>
        <DataTemplate x:Name="loginViewTemplate" DataType="{x:Type viewsModels:LoginViewModel}">
            <views:LoginView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="chatViewTemplate" DataType="{x:Type viewsModels:ChatViewModel}">
            <views:ChatView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding}"/>
    </Grid>
</Window>
